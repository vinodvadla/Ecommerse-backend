<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>Home</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
        <%-include('./Partials/styles.ejs')%>
    </head>

    <body>
        <!-- header -->
        <section id="header">
            <a href="#"><img src="./images/logo.png" alt="logo" class="logo"/></a>
            <div>
                <ul id="navbar">
                    <li>
                        <a href="/" class="active">Home</a>
                    </li>
                    <li>
                        <a href="/shop/1">Shop</a>
                    </li>
                    <li>
                        <a href="/about">About</a>
                    </li>
                    <li>
                        <a href="/contact">Contact Us</a>
                    </li>
                    <% if (locals.user) { %>
                        <li>
                          <a href="/logout">logout</a>
                        </li>
                        <li>
                          <a href="/Profile">Profile</a>
                        </li>

                      <% } else { %>
                        <li>
                          <a href="/login">Login</a>
                        </li>
                        <li>
                            <a href="/signup">Signup</a>
                          </li>
                      <%}%>
                        <a id="lg-bag" href="/cart">
                            <i class="fa-solid fa-bag-shopping"></i>
                        </a>
                    </li>
                    <a id="close" href="#">
                        <i class="fa-solid fa-xmark"></i>
                    </a>
                </ul>
            </div>
            <div id="mobile">
                <a href="cart.html">
                    <i class="fa-solid fa-bag-shopping"></i>
                </a>
                <i id="bar" class="fas fa-outdent"></i>

            </div>
        </section>

        <!-- hero section -->
        <section id="hero">
            <h4>Trade-in-offer</h4>
            <h2>Blasting deals</h2>
            <h1>On all products</h1>
            <p>Upto 70% off on all products</p>
            <button onclick="window.location.href='/shop/1'">Shop now</button>
        </section>

        <!-- features -->
        <section id="features" class="section-p1">
            <div class="fe-box">
                <img src="/images/features/—Pngtree—delivery men with mask and_5359540.png" alt="feature1">
                <h6>Free Shipping</h6>
            </div>
            <div class="fe-box">
                <img src="/images/features/150.jpg" alt="feature1">
                <h6>Online Order</h6>
            </div>
            <div class="fe-box">
                <img src="/images/features/Lovepik_com-401485157-man-is-saving-money.png" alt="feature1">
                <h6>Save Money</h6>
            </div>
            <div class="fe-box">
                <img src="/images/features/happy.png" alt="feature1">
                <h6>Happy Sell</h6>
            </div>
            <div class="fe-box">
                <img src="/images/features/pngegg.png" alt="feature1">
                <h6>24/7 Support</h6>
            </div>
            <div class="fe-box">
                <img src="/images/features/pngegg.png" alt="feature1">
                <h6>Easy usage</h6>
            </div>
        </section>
        <!-- products -->
        <section id="products" class="section-p1">
            <h2>Featured Products</h2>
            <p>Trending Summer collection going live.</p>
            <div class="pro-container">
                <% locals.products.forEach(element => { %>
                    <div class="pro" onclick="window.location.href='/products/<%=element._id%>'">
                        <img src=<%=element.thumbnail%> alt=<%=element.title%>>
                        <div class="des">
                            <span><%=element.brand%></span>
                            <h5><%=element.title%></h5>
                            <div class="star">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <h4>$<%=element.price%></h4>
                        </div>
                        <a href="/cart/home/<%=element._id%>" class="cart">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>
        <!-- banner -->
        <section id="banner" class="section-m1">
            <h4>Repair services</h4>
            <h2>Upto
                <span>70% off</span>
                descount on T-shirt & Accessories</h2>
            <button class="normal">Explore</button>
        </section>

        <!-- New arrivals -->
        <section id="products" class="section-p1">
            <h2>New Arrivals</h2>
            <p>Go through the new ones.</p>
            <div class="pro-container">

                <% locals.newArrival.forEach(element => { %>
                    <div class="pro" onclick="window.location.href='/products/<%=element._id%>'">
                        <img src=<%=element.thumbnail%> alt=<%=element.title%>>
                        <div class="des">
                            <span><%=element.brand%></span>
                            <h5><%=element.title%></h5>
                            <div class="star">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <h4>$<%=element.price%></h4>
                        </div>
                        <a href="/cart/home/<%=element._id%>" class="cart">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                <% }) %>

            </div>
        </section>

        <!-- sm banner -->
        <section id="sm-banner" class="section-p1">
            <div class="banner-box">
                <h4>
                    Cranzy Deals
                </h4>
                <h2>buy 1 get 1 free</h2>
                <span>the best place to the things</span>
                <button class="white">Learn More</button>
            </div>
            <div class="banner-box banner-box2">
                <h4>
                    Summer collections
                </h4>
                <h2>Upcoming season</h2>
                <span>Best time to buy all the things</span>
                <button class="white">Collection</button>
            </div>
        </section>

        <!-- banner3 -->
        <section id="banner-3" class="section-p1">
            <div class="banner-box">
                <h2>SEASONAL SALE</h2>
                <h4>Winter collection 70% off</h4>
            </div>
            <div class="banner-box banner-box2">
                <h2>NEW FOOTWARE COLLECTION</h2>
                <h4>Get into it</h4>
            </div>
            <div class="banner-box banner-box3">
                <h2>T-SHIRTS</h2>
                <h4>Trending collections</h4>
            </div>
        </section>

        <!-- newsletter -->
        <section id="newsletter" class="section-p1">
            <div class="newstext">
                <h4>Sign-up for newsletters</h4>
                <p>get updates on new products and
                    <span>Special Offers</span>
                </p>
            </div>
            <div class="form">
                <input type="text" placeholder="Your email">
                <button class="normal">Sign up</button>
            </div>

        </section>

        <!-- footer -->
     <%-include('./Partials/footer.ejs')%>
        <%-include('./Partials/scripts.ejs')%>
    </body>

</html>
